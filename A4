CREATE TABLE A4_DEPARTAMENTO(
    CODDEP NUMBER(3) PRIMARY KEY,
    DESCRIPCION VARCHAR2(100) NOT NULL,
    NUMPROF NUMBER(3) NOT NULL
);

CREATE TABLE A4_DATOSPERSONALES(
    CODDEP NUMBER(3),
    SECUENCIA VARCHAR2(10),
    NOMBRE VARCHAR2(10) NOT NULL,
    PRAPELLIDO VARCHAR2(20) NOT NULL,
    SGAPELLIDO VARCHAR2(20), 
    PRIMARY KEY (CODDEP, SECUENCIA),
    FOREIGN KEY (CODDEP) REFERENCES A4_DEPARTAMENTO(CODDEP)
);

CREATE TABLE A4_DOCTORANDO(
    CODDEP NUMBER(3),
    SECUENCIA VARCHAR2(10),
    FECHACOMIENZO DATE NOT NULL,
    PRIMARY KEY (CODDEP, SECUENCIA),
    FOREIGN KEY (CODDEP, SECUENCIA) REFERENCES A4_DATOSPERSONALES(CODDEP, SECUENCIA)
);

CREATE TABLE A4_DOCTOR (
    CODDEP NUMBER(3),  
    SECUENCIA VARCHAR2(10),
    TITULO VARCHAR2(100) NOT NULL,
    CALIFICACION VARCHAR2(10) NOT NULL,
    PRIMARY KEY (CODDEP, SECUENCIA),
    FOREIGN KEY (CODDEP, SECUENCIA) REFERENCES A4_DATOSPERSONALES(CODDEP, SECUENCIA)
);

CREATE TABLE A4_LUGAR (
    AULA VARCHAR2(10) PRIMARY KEY
);

CREATE TABLE A4_CURSO (
    CODCURSO VARCHAR2(10) PRIMARY KEY,
    NUMHORAS VARCHAR2(10) NOT NULL,
    AULA VARCHAR2(10),
    FOREIGN KEY (AULA) REFERENCES A4_LUGAR(AULA)
);

CREATE TABLE A4_RECIBE (
    CODDEP NUMBER(3), 
    SECUENCIA VARCHAR2(10),
    CODCURSO VARCHAR2(10),
    PRIMARY KEY (CODDEP, SECUENCIA, CODCURSO),
    FOREIGN KEY (CODDEP, SECUENCIA) REFERENCES A4_DATOSPERSONALES(CODDEP, SECUENCIA),
    FOREIGN KEY (CODCURSO) REFERENCES A4_CURSO(CODCURSO)
);

CREATE TABLE A4_IMPARTE (
    CODDEP NUMBER(3),  
    SECUENCIA VARCHAR2(10),
    CODCURSO VARCHAR2(10),
    PRIMARY KEY (CODDEP, SECUENCIA, CODCURSO),
    FOREIGN KEY (CODDEP, SECUENCIA) REFERENCES A4_DOCTOR(CODDEP, SECUENCIA),
    FOREIGN KEY (CODCURSO) REFERENCES A4_CURSO(CODCURSO)
);
